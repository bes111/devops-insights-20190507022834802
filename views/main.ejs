<!DOCTYPE html>
<html lang="en-us">

    <head>
        <title>DemoDRA - Current Weather</title>
        <link rel="stylesheet" href="/built/css/default.css" />
        <script src="/bower_components/angular/angular.js"></script>
        <script src="/bower_components/angular-route/angular-route.js"></script>
        <script src="/js/controllers.js"></script>
        <style>
	       /* Set the size of the div element that contains the map */
	      #map {
	        height: 400px;  
	        width: 100%;  
       		}
    	</style>
    </head>
    <body>
        <div float="left">
            <% include includes/mainbody %>
        </div>
        <div id="map"></div>
        <script>
			function initMap() {
  			// The location of New Zealand
  			var nz = {lat: -41.838, lng: 171.779};
  			// The map, centered at New Zealand
  			var Auc = {lat: -36.866, lng: 174.766};
  			var Ham = {lat: -37.783, lng: 175.283};
  			var Wel = {lat: -41.286, lng: 174.775};
  			var Chr = {lat: -43.533, lng: 172.633};
  			var Dun = {lat: -45.874, lng: 170.503};
  			var map = new google.maps.Map(
	        document.getElementById('map'), {zoom: 4, center: nz});
			  // The marker, positioned at New Zealand
		    var Aucmarker = new google.maps.Marker({position: Auc, map: map});
		    var Hammarker = new google.maps.Marker({position: Ham, map: map});
		    var Welmarker = new google.maps.Marker({position: Wel, map: map});
		    var Chrmarker = new google.maps.Marker({position: Chr, map: map});
		    var Dunmarker = new google.maps.Marker({position: Dun, map: map});
}
    	</script>
    	<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAtLvB7d9uW9a26SPIl9RdIHqMDUDZU3KE&callback=initMap">
    </script>
    </body>

    <script>
         angular.element(document).ready(function() {
            angular.bootstrap(document, ['ConsoleModule']);
        });
    </script>
</html>
